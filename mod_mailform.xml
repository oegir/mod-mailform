	<authorEmail>alexey.webmail@gmail.com</authorEmail>
	<authorUrl>https://plus.google.com/112429075996731149828</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[MOD_MAILFORM_XML_DESCRIPTION]]></description>
	
	<customContent />
	
	<!-- Update servers -->
<!-- 	<updateservers> -->
<!-- 		<server type="extension" priority="1" name="Horizontal Menu">http://www.powerhost.pw/projects/mod_mailform/mailform-upgrade.xml</server> -->
<!-- 	</updateservers> -->
	
	<files>
		<filename module="mod_mailform">mod_mailform.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_mailform.xml</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_mailform.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_mailform.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_mailform.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_mailform.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
	
	<config>
	  <fields name="params">
		<fieldset name="options">
		   <field 
				name="email_language" 
				type="language" 
				default="en-GB" 
				label="Email language" 
				description="Select the language in received email" 
			/>
		   <field 
				name="captcha" 
				type="radio"
				default="0" 
				label="Show CAPTCHA"
				class="btn-group btn-group-yesno"
				description="Be sure to enable enable the captcha in the Global Configuration, enable the ReCaptcha plugin and set the keys!!!" 				
			>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		   <field 
				name="req_subject" 
				type="radio"
				default="1" 
				label="Subject required"
				class="btn-group btn-group-yesno" 
			>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
		   <field 
				name="req_name" 
				type="radio"
				default="1" 
				label="Name required"
				class="btn-group btn-group-yesno" 
			>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>			
		</fieldset>
	  </fields>    
	</config>
</extension>
